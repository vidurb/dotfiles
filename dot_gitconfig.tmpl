[user]
    name = Vidur Butalia
    email = vidurbutalia@gmail.com
    signingkey = {{ .keyid }}
    github = vidurb
    gitlab = vidurb
[core]
    editor = nvim
    autocrlf = input
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[diff]
    colorMoved = default
[delta]
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Nord
    navigate = true
    line-numbers = true

[interactive]
    diffFilter = delta --color-only

[gpg]
    program = gpg
[commit]
    gpgSign = true
[tag]
    forceSignAnnotated = false
[url "git@github.com"]
    insteadOf = gh
    pushInsteadOf = https://github.com/
    pushInsteadOf = git://github.com/
[pull]
    rebase = true
